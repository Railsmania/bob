<div class="col-lg-3 col-md-6">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <div class="row">
                <div class="col-xs-3">
                    <i class="fa fa-cloud fa-5x"></i>
                </div>
                <div class="col-xs-9 text-right">
                    <div class="huge"><%= droplet['status']%></div>
                    <div><%= droplet['name']%></div>
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <span class="pull-left">Memory</span>
            <span class="pull-right"><%= droplet['memory']%></span>
            <div class="clearfix"></div>
            <span class="pull-left">Disk</span>
            <span class="pull-right"><%= droplet['disk']%></span>
            <div class="clearfix"></div>
            <span class="pull-left">Region</span>
            <span class="pull-right"><%= droplet['region']['name']%></span>
            <div class="clearfix"></div>
            <span class="pull-left">IP</span>
            <span class="pull-right"><%= droplet['networks']['v4'].first['ip_address']%></span>
            <div class="clearfix"></div>
            <span class="pull-left">Image</span>
            <span class="pull-right"><%= droplet['image']['id']%></span>
            <div class="clearfix"></div>
        </div>
        <!-- Split button -->
        <div class="btn-group btn-group-justified">
          <div class="btn-group">
            <button type="button" class="btn btn-success">Deploy</button>
          </div>
          <div class="btn-group">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
              <span class="caret"></span>
              <span class="sr-only">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><a href="#">Snapshot</a></li>
              <li><%= link_to 'Password Reset', password_reset_droplet_path(droplet['id'])%></li>
              <li class="divider"></li>
              <li><a href="#">Power Off</a></li>
            </ul>
          </div>
        </div>
        <a href="<%= droplet_path(droplet['id']) %>">
            <div class="panel-footer">
                <span class="pull-left">More Details</span>
                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                <div class="clearfix"></div>
            </div>
        </a>
    </div>
</div>